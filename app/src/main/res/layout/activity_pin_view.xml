<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="#58afed"
    tools:context=".PinView"
    tools:ignore="MissingPrefix" >

    <ScrollView
        android:id="@+id/scroll_view_pin_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- May need to adjust width/height -->
            <!-- Added missing prefix tool, does that work? -->
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                map:liteMode="true"
                map:cameraZoom = "16"
                map:mapType="normal"/>

            <TextView
                android:id="@+id/pin_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map"
                android:layout_marginTop="30dp"
                android:text="Category: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/pin_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map"
                android:layout_toEndOf="@+id/pin_category_label"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#ffffff"/>

            <ImageView
                android:id="@+id/category_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map"
                android:layout_toEndOf="@+id/pin_category"
                android:layout_marginTop="22dp"
                android:layout_marginStart="20dp"
                android:background="#00ffffff"/>

            <TextView
                android:id="@+id/pin_description_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pin_category_label"
                android:layout_marginTop="30dp"
                android:text="Description: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/pin_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pin_description_label"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <!-- TODO: add contentDescription and onClick attributes to buttons-->

        <ImageButton
            android:id="@+id/upvote_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/upvote"
            android:onClick="OnUpVoteButtonPress"
            android:background="#00ffffff" />

        <ImageButton
            android:id="@+id/downvote_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/downvote"
            android:onClick="OnDownVoteButtonPress"
            android:background="#00ffffff"/>

        <ImageButton
            android:id="@+id/comment_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/comment"
            android:onClick="OnCommentButtonPress"
            android:background="#00ffffff"/>

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/share"
            android:onClick="OnShareButtonPress"
            android:background="#00ffffff"/>

        <ImageButton
            android:id="@+id/report_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/report"
            android:background="#00ffffff"/>

    </LinearLayout>

</RelativeLayout>

